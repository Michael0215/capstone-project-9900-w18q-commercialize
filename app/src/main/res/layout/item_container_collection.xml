<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:layout_gravity="center_horizontal"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/iv_recipe"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/template"
        android:scaleType="centerCrop"
        android:background="@drawable/background_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Recipe Title"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_recipe" />
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/riv_user_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:src="@drawable/template"
        app:layout_constraintStart_toStartOf="@+id/iv_recipe"
        app:layout_constraintTop_toBottomOf="@+id/tv_recipe"
        app:riv_oval="true"/>
    <TextView
        android:id="@+id/tv_contributor_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:text="Contributor"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/riv_user_photo"
        app:layout_constraintEnd_toEndOf="@+id/iv_recipe"
        app:layout_constraintTop_toTopOf="@+id/riv_user_photo"
        app:layout_constraintBottom_toBottomOf="@+id/riv_user_photo"/>
</androidx.constraintlayout.widget.ConstraintLayout>