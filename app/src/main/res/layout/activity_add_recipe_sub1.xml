<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:clipToPadding="false">

    <TextView
        android:id="@+id/tv_add_recipe_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1C2E46"
        android:gravity="center_horizontal"
        android:text="Post Recipe"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_step_one"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_input"
        android:backgroundTint="@color/red"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_step_two"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_recipe_page" />

    <TextView
        android:id="@+id/tv_step_two"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_input"
        android:gravity="center"
        android:backgroundTint="@color/red"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/tv_step_three"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_step_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_recipe_page" />

    <TextView
        android:id="@+id/tv_step_three"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_input"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_step_two"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_recipe_page" />

    <TextView
        android:id="@+id/tv_add_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Ingredients"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_step_two"/>
<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/IngredientRecyclerView"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="220dp"-->
<!--        android:layout_marginTop="15dp"-->
<!--        android:orientation="vertical"-->
<!--        android:overScrollMode="never"-->
<!--        android:padding="15sp"-->
<!--        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/tv_add_ingredient"-->
<!--        />-->
    <ScrollView
        android:id="@+id/IngredientRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:padding="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_add_ingredient"
        >
        <LinearLayout
            android:id="@+id/ll_ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/view01"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/drak_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/IngredientRecyclerView"/>
    <View android:id="@+id/view02"
        android:layout_width="2dp"
        android:layout_height="220dp"
        android:background="@color/drak_blue"
        app:layout_constraintStart_toStartOf="@+id/IngredientRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/IngredientRecyclerView"
        app:layout_constraintBottom_toBottomOf="@+id/IngredientRecyclerView"/>
    <View android:id="@+id/view03"
        android:layout_width="2dp"
        android:layout_height="220dp"
        android:background="@color/drak_blue"
        app:layout_constraintEnd_toEndOf="@+id/IngredientRecyclerView"
        app:layout_constraintTop_toTopOf="@+id/IngredientRecyclerView"
        app:layout_constraintBottom_toBottomOf="@+id/IngredientRecyclerView"/>
    <View
        android:id="@+id/view04"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/drak_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IngredientRecyclerView"/>
    <TextView
        android:id="@+id/tv_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty of cooking"
        android:layout_marginStart="10dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IngredientRecyclerView"/>

    <Spinner
        android:id="@+id/spn_type_difficulty"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:textColor="@color/teal_700"
        android:entries="@array/difficulty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_difficulty" />

    <TextView
        android:id="@+id/tv_scheduled_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Scheduled time"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_difficulty"/>

    <Spinner
        android:id="@+id/spn_type_time"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:entries="@array/time"
        android:textColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_scheduled_time" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_pre"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/dark_blue"
        android:text="PREV"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_scheduled_time"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bt_next"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="@color/dark_blue"
        android:text="NEXT"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:cornerRadius="8dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_scheduled_time"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!--    <GridView-->
    <!--    android:id="@+id/gv_recipe"-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="600dp"-->
    <!--    android:layout_marginTop="15dp"-->
    <!--    app:layout_constraintStart_toStartOf="parent"-->
    <!--    app:layout_constraintTop_toBottomOf="@+id/tv_add_recipe_page"/>-->


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bt_cancel"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:padding="6dp"
        android:src="@drawable/ic_back"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/bt_add_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        app:layout_constraintTop_toTopOf="@id/tv_add_ingredient"
        app:layout_constraintEnd_toEndOf="@id/IngredientRecyclerView"
        app:layout_constraintBottom_toBottomOf="@id/tv_add_ingredient"
        android:drawableRight="@drawable/ic_add"
        android:backgroundTint="@color/primary"/>
</androidx.constraintlayout.widget.ConstraintLayout>

